<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <!-- States for affair -->
        <record forcecreate="False" id="affair_state_draft" model="affair.state">
            <field name="name">Draft</field>
            <field name="sequence">1</field>
        </record>
        
        <record forcecreate="False" id="affair_state_waiting" model="affair.state">
            <field name="name">Waiting</field>
            <field name="sequence">10</field>
        </record>
        
        <record forcecreate="False" id="affair_state_progress" model="affair.state">
            <field name="name">Progress</field>
            <field name="sequence">20</field>
        </record>
        
        <record forcecreate="False" id="affair_state_done" model="affair.state">
            <field name="name">Done</field>
            <field name="sequence">30</field>
            <field name="is_end">True</field>
        </record>
        
        <record forcecreate="False" id="affair_state_cancel" model="affair.state">
            <field name="name">Cancel</field>
            <field name="sequence">40</field>
            <field name="is_end">True</field>
        </record>
        
    </data>
</openerp>