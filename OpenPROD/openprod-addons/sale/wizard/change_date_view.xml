<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<record model="ir.ui.view" id="view_form_replacement_date">
			<field name="name">view_form_replacement_date</field>
			<field name="model">replacement.date</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Modification of the date">
					<group colspan="4" col="4" string="Enter the new value for the date">
						<field name="name"/>
					</group>
					<footer>
						<button name="action_change_date_value" string="OK" type="object" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_replacement_date">
			<field name="name">Modification of the date</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">replacement.date</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
	</data>
</openerp>