<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="view_company_form_purchase">
			<field name="name">view_company_form_purchase</field>
			<field name="inherit_id" ref="base.view_company_form" />
			<field name="priority" eval="1000" />
			<field name="model">res.company</field>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='rml_footer']" position="after">
					<field name="rml_purchase_footer" attrs="{'invisible': [('custom_footer','=',False)]}" />
				</xpath>
			</field>
		</record>
        
    </data>
</openerp>