<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<!-- ===================== -->
		<!-- CHANGE ACCOUNT SYSTEM -->
		<!-- ===================== -->
	
		<record model="ir.ui.view" id="view_form_invoice_change_account_system">
			<field name="name">view_form_invoice_change_account_system</field>
			<field name="model">invoice.change.account.system</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Change the account system">
					<group colspan="4" col="4">
						<field name="invoice_account_system_id"/>
						<label string="" colspan="2"/>
					</group>
					<field name="invoice_id" invisible="True"/>
					<footer>
						<button name="invoice_change_account_system" string="Change the account system" type="object" class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_invoice_change_account_system">
			<field name="name">Change account system</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">invoice.change.account.system</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
		
	</data>
</openerp>