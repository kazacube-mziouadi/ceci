<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<menuitem name="Product" id="menu_product_main" parent="base_openprod.menu_technical_data_main" sequence="1" />
		<menuitem name="Product" id="menu_product_conf" parent="base_openprod.menu_technical_data_configuration" sequence="1" />

		<menuitem name="Quality" id="menu_quality_main" sequence="17" web_icon="base_openprod,static/description/quality.png" />
		<menuitem name="Configuration" id="menu_quality_conf" parent="menu_quality_main" sequence="40" />

		<!-- ========= -->
		<!-- PACKAGING -->
		<!-- ========= -->
		<!-- FORM VIEW Product Packaging -->
		<record id='view_form_product_packaging' model='ir.ui.view'>
			<field name="name">view_form_product_packaging</field>
			<field name="model">product.packaging</field>
			<field name="arch" type="xml">
				<form string="Product Packaging" version="8.0">
					<group colspan="4" col="4">
						<group colspan="4" col="6">
							<field name="name" />
							<field name="total_qty" />
							<field name="price" />
						</group>
						<group colspan="4" col="4" string="Parcel">
							<field name="parcel_qty" />
							<field name="parcel_sizing_id" />
						</group>
						<group colspan="4" col="6" string="Pallet">
							<field name="layer_nb" />
							<field name="pallet_sizing_id" />
							<field name="parcel_per_layer_nb" />
						</group>
						<group colspan="4" col="4" string="Remarks">
							<field name="note" colspan="4" nolabel="1" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<!-- TREE VIEW Product Packaging -->
		<record id='view_tree_product_packaging' model='ir.ui.view'>
			<field name="name">view_tree_product_packaging</field>
			<field name="model">product.packaging</field>
			<field name="arch" type="xml">
				<tree string="Product Packagings" version="8.0">
					<field name="name" />
					<field name="price" />
					<field name="parcel_qty" />
					<field name="layer_nb" />
					<field name="parcel_per_layer_nb" />
				</tree>
			</field>
		</record>

		<!-- SEARCH VIEW Product Packaging -->
		<record id='view_search_product_packaging' model='ir.ui.view'>
			<field name="name">view_search_product_packaging</field>
			<field name="model">product.packaging</field>
			<field name="arch" type="xml">
				<search version="8.0">
					<field name="name" />
					<field name="note" />
				</search>
			</field>
		</record>

		<!-- ACTION Product Packaging -->
		<record id="act_product_packaging" model="ir.actions.act_window">
			<field name="name">Product Packaging</field>
			<field name="res_model">product.packaging</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="view_search_product_packaging" />
		</record>

		<menuitem name="Product Packaging" action="act_product_packaging" id="menu_product_packaging" parent="menu_product_conf" groups="base_openprod.group_menu_tech_data_config" />


		<!-- ============== -->
		<!-- PRODUCT SIZING -->
		<!-- ============== -->

		<!-- FORM VIEW Product sizing -->
		<record id='view_form_product_sizing' model='ir.ui.view'>
			<field name="name">view_form_product_sizing</field>
			<field name="model">product.sizing</field>
			<field name="arch" type="xml">
				<form string="Product sizing" version="8.0">
					<group colspan="4" col="6">
						<field name="product_id" colspan="6" />
						<field name="height" />
						<field name="width" />
						<field name="depth" />
					</group>
				</form>
			</field>
		</record>

		<!-- TREE VIEW Product sizing -->
		<record id='view_tree_product_sizing' model='ir.ui.view'>
			<field name="name">view_tree_product_sizing</field>
			<field name="model">product.sizing</field>
			<field name="arch" type="xml">
				<tree string="Product sizings" version="8.0">
					<field name="product_id" />
					<field name="height" />
					<field name="width" />
					<field name="depth" />
				</tree>
			</field>
		</record>

		<!-- SEARCH VIEW Product sizing -->
		<record id='view_search_product_sizing' model='ir.ui.view'>
			<field name="name">view_search_product_sizing</field>
			<field name="model">product.sizing</field>
			<field name="arch" type="xml">
				<search version="8.0">
					<field name="product_id" />
				</search>
			</field>
		</record>

		<!-- ACTION Product sizing -->
		<record id="act_product_sizing" model="ir.actions.act_window">
			<field name="name">Product sizing</field>
			<field name="res_model">product.sizing</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="view_search_product_sizing" />
		</record>

		<menuitem name="Product sizing" action="act_product_sizing" id="menu_product_sizing" parent="menu_product_conf" groups="base_openprod.group_menu_tech_data_config" />


		<!-- ============ -->
		<!-- UOM CATEGORY -->
		<!-- ============ -->

		<!-- FORM VIEW UoM Category -->
		<record id='view_form_uom_category' model='ir.ui.view'>
			<field name="name">view_form_uom_category</field>
			<field name="model">product.uom.category</field>
			<field name="arch" type="xml">
				<form string="Units of Measure category">
					<group>
						<field name="name" />
					</group>
				</form>
			</field>
		</record>

		<!-- TREE VIEW UoM Category -->
		<record id='view_tree_uom_category' model='ir.ui.view'>
			<field name="name">view_tree_uom_category</field>
			<field name="model">product.uom.category</field>
			<field name="arch" type="xml">
				<tree string="UoMs" version="8.0">
					<field name="name" />
				</tree>
			</field>
		</record>

		<!-- SEARCH VIEW UoM Category -->
		<record id='view_search_uom_category' model='ir.ui.view'>
			<field name="name">view_search_uom_category</field>
			<field name="model">product.uom.category</field>
			<field name="arch" type="xml">
				<search version="8.0">
					<field name="name" />
				</search>
			</field>
		</record>

		<!-- ACTION UoM Category -->
		<record id="act_uom_category" model="ir.actions.act_window">
			<field name="name">UoM category</field>
			<field name="res_model">product.uom.category</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="view_search_uom_category" />
		</record>

		<!-- === -->
		<!-- UOM -->
		<!-- === -->

		<!-- FORM VIEW UoM -->
		<record id='view_form_uom' model='ir.ui.view'>
			<field name="name">view_form_uom</field>
			<field name="model">product.uom</field>
			<field name="arch" type="xml">
				<form string="Units of Measure">
					<group>
						<group>
							<field name="name" />
							<field name="category_id" />
							<field name="type" />
							<label for="factor" />
							<div>
								<field name="factor" attrs="{'invisible': [('type', '!=', 'smaller')]}" />
								<field name="factor_inv" attrs="{'invisible': [('type', '!=', 'bigger')]}" />
								<p attrs="{'invisible':[('type','!=','smaller')]}" class="oe_grey">
									e.g: 1 * (reference unit) = ratio * (this unit)
								</p>
								<p attrs="{'invisible':[('type','!=','bigger')]}" class="oe_grey">
									e.g: 1 * (this unit) = ratio * (reference unit)
								</p>
							</div>
						</group>
						<group>
							<field name="price_unit" />
							<field name="management_unit" />
							<field name="active" />
							<field name="rounding" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<!-- TREE VIEW UoM -->
		<record id='view_tree_uom' model='ir.ui.view'>
			<field name="name">view_tree_uom</field>
			<field name="model">product.uom</field>
			<field name="arch" type="xml">
				<tree string="UoMs" version="8.0">
					<field name="category_id" />
					<field name="name" />
					<field name="price_unit" />
					<field name="management_unit" />
					<field name="factor" />
				</tree>
			</field>
		</record>

		<!-- SEARCH VIEW UoM -->
		<record id='view_search_uom' model='ir.ui.view'>
			<field name="name">view_search_uom</field>
			<field name="model">product.uom</field>
			<field name="arch" type="xml">
				<search version="8.0">
					<filter name="price_unit" string="Price unit" domain="[('price_unit', '=', True)]" />
					<field name="category_id" />
					<field name="name" />
				</search>
			</field>
		</record>

		<!-- ACTION UoM -->
		<record id="act_uom" model="ir.actions.act_window">
			<field name="name">UoM</field>
			<field name="res_model">product.uom</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="view_search_uom" />
		</record>

		<!-- ======== -->
		<!-- CATEGORY -->
		<!-- ======== -->

		<record id="product_category_search_view" model="ir.ui.view">
			<field name="name">product.category.search</field>
			<field name="model">product.category</field>
			<field name="arch" type="xml">
				<search string="Product Categories">
					<field name="name" string="Product Categories" />
					<field name="parent_id" />
					<filter string="Normal" domain="[('type', '=', 'normal')]" name="filter_type_normal" />
					<filter string="View" domain="[('type', '=', 'view')]" name="filter_type_view" />
				</search>
			</field>
		</record>

		<!-- ACTION Related Products -->
		<record id="act_related_products" model="ir.actions.act_window">
			<field name="name">Related Products</field>
			<field name="res_model">product.product</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('categ_id', '=', active_id)]</field>
		</record>

		<record id="product_category_form_view" model="ir.ui.view">
			<field name="name">product.category.form</field>
			<field name="model">product.category</field>
			<field name="arch" type="xml">
				<form class="oe_form_configuration">
					<group col="9">
						<group colspan="8" col="2" name="group_main">
							<div class="oe_title" colspan="2">
								<label for="name" string="Category name" class="oe_edit_only" />
								<h1>
									<field name="name" placeholder="e.g. Lamps" />
								</h1>
							</div>
							<group name="first" col="4" string="Category Type">
								<field name="parent_id" />
								<field name="type" />
							</group>
							<group string="Quality" colspan="4" col="4" attrs="{'invisible':[('type', '!=', 'normal')]}">
								<group string="Plan of Control" colspan="2" col="2" name="plan_of_control_group">
									<field name="quality_control_ids" colspan="2" nolabel="1">
										<tree editable="top" string="Products">
											<field name="type" />
											<field name="control_id" domain="[('type', '=', type)]" context="{'default_type': type}" />
											<field name="partner_id" />
											<field name="frequency_value" />
											<field name="date_next_frequency" invisible="1" />
											<field name="int_next_frequency" invisible="1" />
										</tree>
									</field>
								</group>
							</group>
						</group>
						<group colspan="1" col="1" class="op_shortcuts" name="action_menu">
							<separator string="Analysis" colspan="1" name="separator_analysis_menu" />
							<button class="oe_inline oe_stat_button" type="action" string="Products" name="%(act_related_products)d" icon="fa-comments-o" attrs="{'invisible':[('type', '!=', 'normal')]}" />
						</group>
					</group>
				</form>
			</field>
		</record>

		<record id="product_category_list_view" model="ir.ui.view">
			<field name="name">product.category.list</field>
			<field name="model">product.category</field>
			<field name="priority">1</field>
			<field name="arch" type="xml">
				<tree string="Product Categories">
					<field name="display_name" />
					<field name="name" />
					<field name="type" />
				</tree>
			</field>
		</record>

		<record id="product_category_structure_view" model="ir.ui.view">
			<field name="name">product.category.list</field>
			<field name="model">product.category</field>
			<field name="priority">1000</field>
			<field name="type">tree</field>
			<field name="field_parent">child_ids</field>
			<field name="arch" type="xml">
				<tree string="Category structure">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="product_category_structure_action" model="ir.actions.act_window">
			<field name="name">Category structure</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.category</field>
			<field name="view_type">tree</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="product_category_structure_view" />
		</record>

		<menuitem id="menu_product_category_structure" name="Category structure" action="product_category_structure_action" parent="menu_product_conf" sequence="3" groups="base_openprod.group_menu_tech_data_config" />

		<record id="product_category_tree_view" model="ir.ui.view">
			<field name="name">product.category.tree</field>
			<field name="model">product.category</field>
			<field name="field_parent">child_ids</field>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Product Categories">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="product_category_action" model="ir.actions.act_window">
			<field name="name">Products by Category</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.category</field>
			<field name="domain">[('parent_id','=',False)]</field>
			<field name="view_type">tree</field>
			<field name="view_id" ref="product_category_tree_view" />
			<field name="help" type="html">
				<p>
					Here is a list of all your products classified by category. You
					can click a category to get the list of all products linked to
					this category or to a child of this category.
				</p>
			</field>
		</record>

		<menuitem action="product_category_action" id="menu_products_category" parent="menu_product_conf" sequence="30" groups="base_openprod.group_menu_tech_data_config" />

		<record id="product_category_action_form" model="ir.actions.act_window">
			<field name="name">Product Categories</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.category</field>
			<field name="view_type">form</field>
			<field name="search_view_id" ref="product_category_search_view" />
			<field name="view_id" ref="product_category_list_view" />
		</record>
		<menuitem action="product_category_action_form" id="menu_product_category_action_form" parent="menu_product_conf" sequence="2" groups="base_openprod.group_menu_tech_data_config" />


		<record id="product_normal_action_tree" model="ir.actions.act_window">
			<field name="name">Products List</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.product</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form,kanban</field>
			<field name="context">{'categ_id':active_id, 'search_default_categ_id':active_id}</field>
		</record>
		<record id="ir_product_category_open" model="ir.values">
			<field eval="'tree_but_open'" name="key2" />
			<field eval="'product.category'" name="model" />
			<field name="name">Products by Categories</field>
			<field eval="'ir.actions.act_window,%d'%product_normal_action_tree" name="value" />
		</record>


		<!-- ======================== -->
		<!-- PRODUCT TEMPLATE (DUMMY) -->
		<!-- ======================== -->
		<!-- FORM VIEW PRODUCT -->
		<record id='product_template_form_view' model='ir.ui.view'>
			<field name="name">view_form_product_template</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<form string="Product">
					<notebook>
						<page name="sales">
						</page>
					</notebook>
				</form>
			</field>
		</record>
		<record id='product_template_search_view' model='ir.ui.view'>
			<field name="name">product_template_search_view</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<search>
					<field name="product_variant_ids" />
					<group string="Group by...">
					</group>
				</search>
			</field>
		</record>

		<!-- ======= -->
		<!-- PRODUCT -->
		<!-- ======= -->
		<!-- FORM VIEW PRODUCT -->
		<record id='view_form_product' model='ir.ui.view'>
			<field name="name">view_form_product</field>
			<field name="model">product.product</field>
			<field name="arch" type="xml">
				<form string="Product">
					<header>
						<field name="state" widget="statusbar" clickable="True" />
					</header>
					<group colspan="4" col="9">
						<group colspan="8">
							<group colspan="4" col="10">
								<group colspan="1">
									<field name="picture" nolabel="1" widget="image" class="oe_avatar oe_left" />
								</group>
								<group colspan="3" col="2">
									<field name="name" />
									<field name="code" />
								</group>
								<group colspan="3" col="2">
									<field name="uom_id" domain="[('management_unit', '=', True)]" />
									<field name="uom_category_id" invisible="1" />
									<field name="dual_unit" groups="base.group_dual_unit" attrs="{'invisible': [('type', '=', 'article')]}" />
									<field name="dual_unit_type" groups="base.group_variable_dual_unit" attrs="{'invisible': [('dual_unit', '=', False)], 'required': [('dual_unit', '=', True)]}" />
									<field name="sec_uom_id" groups="base.group_variable_dual_unit" attrs="{'invisible': [('dual_unit_type', '!=', 'variable')], 'required': [('dual_unit_type', '=', 'variable')]}" />
									<field name="sec_uom_category_id" invisible="1" />
								</group>
								<group colspan="3" col="2">
									<field name="type" />
									<field name="categ_id" domain="[('type', '=', 'normal')]" context="{'default_type': 'normal'}" />
									<field name="company_id" />
								</group>
							</group>
							<notebook colspan="4">
								<page string="Procurement" autofocus="autofocus" attrs="{'invisible': [('type', '=', 'article')]}">
									<group string="Procurement" colspan="4" col="3" name='procurement_product_group'>
										<group colspan="1" col="2" name='procurement_product_group_flag' >
											<field name="supply_method" />
											<field name="trigger_supply" />
											<!-- <field name="supply_frequency" attrs="{'invisible': ['|', ('type', '=', 'service'), ('trigger_supply', '!=', 'make_to_plan')]}"/> -->
										</group>
										<group colspan="1" col="2">
											<field name="sale_ok" />
											<field name="purchase_ok" />
										</group>
										<group colspan="1" col="2" >
											<field name="customer_material" attrs="{'invisible': ['|', ('type', '!=', 'stockable'), ('supply_method', '!=', 'buy')]}" />
											<field name="manage_service_receipt" attrs="{'invisible': ['|', ('type', '!=', 'service'), ('purchase_ok', '=', False)]}" />
											<field name="manage_service_delivery" attrs="{'invisible': ['|', ('type', '!=', 'service'), ('sale_ok', '=', False)]}" />
										</group>
									</group>
								</page>
								<page string="Technical tool" attrs="{'invisible': [('type', '!=', 'tech_tool')]}">
									<group string="Technical" colspan="4" col="4" name="product_technical_page">
										<field name="partner_id" />
									</group>
								</page>
								<page string="Tracability" attrs="{'invisible': [('type', 'in', ('service', 'article'))]}">
									<group colspan="4" col="4">
										<group colspan="1" col="2">
											<group string="Expiry date" colspan="2" col="2">
												<field name="is_expiry_date" />
												<field name="limit_type" attrs="{'invisible': [('is_expiry_date', '=', False)], 'required': [('is_expiry_date', '!=', False)]}" />
												<field name="expiry_type" attrs="{'invisible': [('is_expiry_date', '=', False)]}" />
												<group colspan="2" col="1" attrs="{'invisible': ['|', ('expiry_type', '!=', 'automatic'),('is_expiry_date', '=', False)]}">
													<group colspan="1" col="2">
														<separator string="Expiry date" colspan="2" />
														<field name="expiry_year" />
														<field name="expiry_month" />
														<field name="expiry_day" />
													</group>
													<group colspan="1" col="2">
														<separator string="Removal date" colspan="2" />
														<field name="removal_year" />
														<field name="removal_month" />
														<field name="removal_day" />
													</group>
												</group>
											</group>
                                            <group string="Lots" colspan="2" col="2" attrs="{'invisible': [('track_label', '!=', False)]}">
                                                <field name="track_in_lot" />
                                                <field name="track_out_lot" />
                                            </group>
											<group string="Labels" colspan="2" col="2" attrs="{'invisible': ['|', ('track_in_lot', '!=', False), ('track_out_lot', '!=', False)]}">
												<field name="track_label" />
											</group>
										</group>
										<group colspan="3" col="1">
											<group colspan="1" col="3">
												<group colspan="2" col="4" string="Regulations management" name="regul_management">
													<field name="conformity_certificate" />
													<field name="guarantee" />
													<field name="rohs_logo" />
