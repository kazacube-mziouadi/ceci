<?xml version="1.0"?>

<openerp>
    <data>

        <record id="bilan_view" model="ir.ui.view">
          <field name="name">Bilan</field>
          <field name="model">bilan</field>
          <field name="type">form</field>
          <field name="arch" type="xml">
            <form string="Choisir Périodes">
                <div>
                   <p class="oe_grey">
                       Cet assistant vous permet de générer l'état bilan comptable
                   </p>
               </div>
                <group>
                    <field name="fiscalyear" />
                    <newline/>
                    <field name="fiscalyear2" />
                </group>
                 <footer>
                        <button string="Imprimer" class="oe_highlight" type="object" name="print_bilan_report"/>
                        <button string="Annuler" class="oe_link" special="cancel"/>
               </footer>
            </form>
	    </field>
      </record>
    <record id="action_bilan_menu" model="ir.actions.act_window">
            <field name="name">Bilan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bilan</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="bilan_view"/>
            <field name="target">new</field>
        </record>

         <delete id="account.menu_account_report_bs" model="ir.ui.menu"/>

        <!-- <menuitem
                icon="STOCK_PRINT"
                name="Bilan"
                parent="account.menu_finance_reports"
                action="action_bilan_menu"
                id="menu_general_Bilan_report"
               /> -->

        <record model="ir.values" id="action_bilan_report_values1">
            <field name="model_id" ref="account.model_account_account" />
            <field name="object" eval="1" />
            <field name="name">Bilan</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' +str(ref('action_bilan_menu'))" />
            <field name="key">action</field>
            <field name="model">account.account</field>
        </record>

    </data>
</openerp>
